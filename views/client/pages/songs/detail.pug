extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
    .singer-detail
        .container.my-3
            .row
                .col-12
                    .inner-title #{song.title}

                    .inner-actions
                        div(class="inner-action inner-time")
                            -if(song.createdAt)
                                <i class="fa-regular fa-clock"></i> #{song.createdAt}
                            -else
                                <i class="fa-regular fa-clock"></i> chưa rõ
                        div(class="inner-action inner-singer")
                            <i class="fa-solid fa-microphone-lines"></i> #{singer.fullName}
                        div(class="inner-action inner-topic")
                            <i class="fa-solid fa-music"></i> #{topic.title}
                        div(class="inner-action inner-like")
                            <i class="fa-regular fa-thumbs-up"></i> #{song.like} thích
                        div(class="inner-action inner-heart")
                            <i class="fa-regular fa-heart"></i> Bài hát yêu thích

                    .inner-play
                        .inner-avatar
                            img(src=song.avatar)
                        .inner-audio
                            //- audio(controls)
                            //-     source(src="https://backend.daca.vn/assets/audios/cat-doi-noi-sau.mp3")
                            div(id="aplayer" 
                                data-song=song
                                data-singer = singer)
                    .inner-desc
                        .inner-label Mô tả
                        .inner-text #{song.description}

                    .inner-desc
                        .inner-label !{song.lyrics}
                        .inner-text
                            | Nội dung Lời bài hát...